{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./typings", "./node_modules/@types"]
    },
    "include": [
        "./src/**/*.(ts|tsx)",
        "./globals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx"
    ]
}